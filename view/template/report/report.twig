<link rel="stylesheet" href="view/template/report/css/report.css"  />


{{ header }}{{ column_left }}
<div id="content">


  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-report').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>


<div>



    <div>
      <p class="text-danger" >FILTER IS REMAINING TO IMPLEMENT!!! YOU CAN CHECK IF THE OPTION ARE RIGHT IN DROPDOWN LIST </p>
      <div class="dropdown">
       <select class="bootstrap-select" id="projectFilter" onchange="loadSortChart('projectFilter')" >
          {% for p in projectlist %}
            {%  if (p.selected==0) %}
               <option id="{{p.id}}" >{{ p.item }}</option>
            {%  else %}
               <option value="{{p.id}}" selected="selected">{{ p.item }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>


      <div class="dropdown">
       <select class="bootstrap-select" id="countryFilter" onchange="loadSortChart('countryFilter')" >
          {% for p in countrylist %}
            {%  if (p.selected==0) %}
               <option id="{{p.id}}" >{{ p.item }}</option>
            {%  else %}
               <option value="{{p.id}}" selected="selected">{{ p.item }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>

      <div class="dropdown">
       <select class="bootstrap-select" id="dateFilter" onchange="loadSortChart('dateFilter')" >
          {% for p in datelist %}
            {%  if (p.selected==0) %}
               <option id="{{p.id}}" >{{ p.item }}</option>
            {%  else %}
               <option value="{{p.id}}" selected="selected">{{ p.item }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>


    </div>
    

    <br/><br/>
    <p class="text-success" style="font-size:20px;margin: 0 auto;">PROJECT ANALYSIS</p>
    <hr style="height:1px; background-color: grey; width:90%;" >
    
    <div id="projectViewInterested"  style="height:40%; width:90% ; background-color:white; text-align:center; margin: 0 auto;">
      <canvas id="myChart" style="height:75%; width:80% ;canvas {-moz-user-select: none;-webkit-user-select: none;-ms-user-select: none; }" >
      </canvas>
    </div>
    <br/>
    <br/>
    <div id="projectviewweekly"  style="height:40%; width:90% ;background-color:white; text-align:center;  margin:0 auto;">
      <canvas id="weeklychart" style="height:75%; width:80% ;canvas {-moz-user-select: none;-webkit-user-select: none;-ms-user-select: none; }" >
      </canvas>
    </div>


    <br/>
    <h3 class="text-danger" style="text-align: center;">News analysis Remaining</h2>
    <br/>
    <h3 class="text-danger" style="text-align: center;">Emergency uploads analysis Remaining</h2>



	</div>
</div>





{{ footer }} 
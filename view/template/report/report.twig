<link rel="stylesheet" href="view/template/report/css/report.css"  />


{{ header }}{{ column_left }}
<div id="content">


  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-report').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>


<div>



    <div>

      <div class="dropdown">
       <select class="bootstrap-select" id="projectFilter" onchange="loadSortChart('projectFilter')" >
          {% for p in projectlist %}
            {%  if (p.selected==0) %}
               <option id="{{p.id}}" >{{ p.item }}</option>
            {%  else %}
               <option value="{{p.id}}" selected="selected">{{ p.item }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>


      <div class="dropdown">
       <select class="bootstrap-select" id="countryFilter" onchange="loadSortChart('projectFliter')" >
          {% for p in projectlist %}
            {%  if (p.selected==0) %}
               <option id="{{p.id}}" >{{ p.item }}</option>
            {%  else %}
               <option value="{{p.id}}" selected="selected">{{ p.item }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>


    </div>
    
    <div id="projectViewInterested"  style="height:40%; width:90% ; text-align:center; border: 2px solid red; margin:30px;">
      <canvas id="myChart" style="height:75%; width:80% ;canvas {-moz-user-select: none;-webkit-user-select: none;-ms-user-select: none; }" >
      </canvas>
    </div>
	</div>
</div>





{{ footer }} 